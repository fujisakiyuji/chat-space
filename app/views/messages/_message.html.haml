.contents__table__area__article{"data-message-id": "#{message.id}"}
  .contents__table__area__article__name-time
    .contents__table__area__article__name-time__name
      = message.user.name
    .contents__table__area__article__name-time__time
      = message.created_at
  .contents__table__area__article__message
    - if message.text.present?
      %p.contents__table__area__article__message__sentence
        = message.text
    = image_tag message.image.url, class: "contents__table__area__article__message__image" if message.image.present?
